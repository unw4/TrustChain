{
  "name": "trustchain-sui",
  "version": "0.1.0",
  "description": "Critical Infrastructure Tracking on Sui Blockchain",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "deploy:contracts": "cd move && sui client publish --gas-budget 100000000"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
